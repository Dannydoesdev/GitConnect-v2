{
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix functions run build"
      ]
    }
  ],
  "emulators": {
    "functions": {
      "port": 5001
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true,
    "firestore": {
      "port": 8080
    },
    "storage": {
      "port": 9199
    },
    "auth": {
      "port": 9099
    },
    "pubsub": {
      "port": 8085
    }
  },
  "firestore": {
    "rules": "./firebase/emulator/firestore.rules",
    "indexes": "./firebase/emulator/firestore.indexes.json"
  },
  "storage": {
    "rules": "./firebase/emulator/storage.rules"
  }
}
