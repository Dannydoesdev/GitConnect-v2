# Firebase Client SDK Configuration
# These are safe to be public. Get them from your Firebase project settings.
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_app_id 
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase App Check (optional based on your project)
NEXT_PUBLIC_FIREBASE_APP_CHECK_KEY=your_firebase_app_check_key
NEXT_PUBLIC_FIREBASE_APP_CHECK_LOCAL_DEBUG_KEY=your_firebase_app_check_debug_key

# AI Keys
# Used for (optional) AI features. Keep this secret.
OPENAI_API_KEY=your_openai_api_key
GEMINI_API_KEY=your_gemini_api_key

# Revalidation Token
# A secret token used to trigger on-demand revalidation of Next.js pages.
REVALIDATION_TOKEN=your_secret_revalidation_token

# Feature Flags
# Set to "true" to enable these features.
NEXT_PUBLIC_ENABLE_PAYMENTS=false
NEXT_PUBLIC_ENABLE_ANALYTICS=false

# Stripe Configuration
# Required if NEXT_PUBLIC_ENABLE_PAYMENTS is "true".
NEXT_PUBLIC_STRIPE_PRICE_MONTHLY=your_stripe_monthly_price_id
NEXT_PUBLIC_STRIPE_PRICE_ANNUAL=your_stripe_annual_price_id

# Mixpanel Analytics
# Required if NEXT_PUBLIC_ENABLE_ANALYTICS is "true".
NEXT_PUBLIC_MIXPANEL_TOKEN=your_mixpanel_project_token

# Site URL
# The public URL of your deployed site.
NEXT_PUBLIC_SITE_URL=http://localhost:3000