{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "es2018",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/hooks/*": [
        "./hooks/*"
      ],
      "@/types/*": [
        "./types/*"
      ],
      "@/pages/*": [
        "./pages/*"
      ],
      "@/atoms/*": [
        "./atoms/*"
      ],
      "@/app/*": [
        "./app/*"
      ],
      "@/styles/*": [
        "./styles/*"
      ],
      "@/lib/*": [
        "./lib/*"
      ],
      "@/utils/*": [
        "./utils/*"
      ],
      "@/components/*": [
        "./components/*"
      ],
      "@/features/*": [
        "./features/*"
      ]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "functions",
    "**/backup/**"
  ]
}
